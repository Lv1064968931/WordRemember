<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"

    >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/loginregister_imag"
            />


    <TableLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="手机号"
                android:textColor="@color/txt1_black"
                />

            <EditText
                android:id="@+id/phone_ET"
                android:layout_weight="8"
                android:hint="手机号码"
                android:inputType="phone"
                android:textColorHint="@color/txt1_gray"
                android:textSize="14sp"
                android:textColor="@color/txt2_black"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_weight="1"
                android:text="密码"
                android:textColor="@color/txt1_black"
                />

            <EditText
                android:id="@+id/password_ET"
                android:layout_weight="8"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColorHint="@color/txt1_gray"
                android:textSize="14sp"
                android:textColor="@color/txt2_black"
                />

        </TableRow>

        <TextView
            android:id="@+id/forgetpassTV"
            android:text="忘记密码？"
            android:textColor="@color/txt1_black"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/loginBtn"
            android:text="登录"
            android:background="@drawable/loginregisterbutton_style"
            android:layout_marginTop="15dp"
            android:textColor="@color/txt1_write"
            />
        <TextView
            android:id="@+id/regiserTV"
            android:text="还没有账号？现在注册"
            android:textColor="@color/txt1_black"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
    </TableLayout>

</LinearLayout>