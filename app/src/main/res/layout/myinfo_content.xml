<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        android:background="@drawable/myinfo_background"
        android:orientation="horizontal">

        <com.example.nuc.wordremember.SelfdesignComponent.CircleImagView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/myinfo_personimag"
            android:layout_centerHorizontal="true"

            />

    </LinearLayout>

    <View
        android:id="@+id/txt_topbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/div_white"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/layout_write"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/strangenoteBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/myinfo_strangeword"
            android:background="@color/btnbg_write"
            android:text="生词本"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            />

        <Button
            android:id="@+id/loveessayBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/myinfo_loveessay"
            android:background="@color/btnbg_write"
            android:text="文章"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            />

        <Button
            android:id="@+id/settingBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/myinfo_setting"
            android:background="@color/btnbg_write"
            android:text="设置"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/div_white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btnbg_write"
            android:drawableLeft="@mipmap/myinfo_logout"
            android:text="退出登录"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/div_white"
        />
</LinearLayout>