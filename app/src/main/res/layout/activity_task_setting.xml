<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TaskSettingActivity"
    android:background="@color/layoutbg_write"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/layoutbg_write"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="任务设置"
            android:textSize="20sp"
            android:textColor="@color/txt2_black"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bg2_grayplus"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/layoutbg_write"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的学习任务"
            android:textSize="20sp"
            android:textColor="@color/txt2_black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/txt1_write"
            android:background="@mipmap/tasksetting_islearning"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bg2_grayplus"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/layoutbg_write"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:background="@drawable/neep_vocabularyimag"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            />
        <RelativeLayout
            android:id="@+id/neep_Rlay"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/layoutbg_write"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >
            
            <TextView
                android:id="@+id/neep_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="考研词汇（2019版）"
                android:textSize="22sp"
                android:textColor="@color/txt2_black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日新学20词"
                android:textColor="@color/txt2_black"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content" 
                android:text="已完成1508/4806"
                android:textColor="@color/txt2_black"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="20dp"
                />

            <ProgressBar
                android:id="@+id/taskneep_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="260dp"
                android:layout_height="5dp"
               android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:progress="32"
                android:visibility="visible"
                android:progressDrawable="@drawable/progressbar_style"
                android:max="100"
                />
            
            
        </RelativeLayout>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bg2_grayplus"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="我的单词书"
        android:textSize="20sp"
        android:textColor="@color/txt2_black"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/bg2_grayplus"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/layoutbg_write"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:background="@drawable/cet4_vocabularyimag"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <RelativeLayout
            android:id="@+id/cet4_Rlay"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/layoutbg_write"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/cet4_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四级词汇（2019版）"
                android:textSize="22sp"
                android:textColor="@color/txt2_black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日新学?词"
                android:textColor="@color/txt2_black"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="已完成0/4806"
                android:textColor="@color/txt2_black"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="20dp"
                />

            <ProgressBar
                android:id="@+id/taskcet_4_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="260dp"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:progress="1"
                android:visibility="visible"
                android:progressDrawable="@drawable/progressbar_style"
                android:max="100"
                />


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/layoutbg_write"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:background="@drawable/cet6_vocabularyimag"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            />
        <RelativeLayout
            android:id="@+id/cet6_Rlay"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/layoutbg_write"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/cet6_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六级词汇（2019版）"
                android:textSize="22sp"
                android:textColor="@color/txt2_black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日新学?词"
                android:textColor="@color/txt2_black"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="已完成0/4806"
                android:textColor="@color/txt2_black"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="160dp"
                android:layout_marginBottom="20dp"
                />

            <ProgressBar
                android:id="@+id/taskcet_6progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="260dp"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:progress="1"
                android:visibility="visible"
                android:progressDrawable="@drawable/progressbar_style"
                android:max="100"
                />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>